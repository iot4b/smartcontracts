{
    "listCard": {
        "title": "{{name}}",
        "subtitle": "{{vendor}}, {{model}}"
    },
    "cardParams": [
        {"title": "Vendor", "value": "{{vendorName}}", "type": "address"},
        {"title": "Node", "value": "{{node}}", "type": "address"},
        {"title": "Firmware", "value": "{{version}}","type": "string"},
        {"title": "Registration", "value": "{{lastRegisterTime}}", "type": "datetime"}
    ],
    "cardCharts": [],
    "cardButtons": [
    {
      "title": "Перезагрузка",
      "dialog": null,
      "cmd": "ndms system reboot",
      "displayResult": "ok"
    },
    {
      "title": "Просмотр текущих Wi-Fi настроек",
      "dialog": null,
      "cmd": "ndms show interface WifiMaster0",
      "displayResult": "text"
    },
    {
      "title": "Изменение SSID",
      "dialog": {
        "title": "Изменение SSID",
        "fields": [
          {
            "label": "Новый SSID",
            "name": "newSSID",
            "type": "string"
          }
        ]
      },
      "cmd": "ndms interface WifiMaster0 ssid '{{newSSID}}' && system configuration save",
      "displayResult": "ok"
    },
    {
      "title": "Установка пароля Wi-Fi",
      "dialog": {
        "title": "Установка пароля Wi-Fi",
        "fields": [
          {
            "label": "Пароль",
            "name": "newPass",
            "type": "string"
          }
        ]
      },
      "cmd": "ndms interface WifiMaster0 key '{{newPass}}' && system configuration save",
      "displayResult": "ok"
    },
    {
      "title": "Перезапуск Wi-Fi",
      "dialog": null,
      "cmd": "ndms interface WifiMaster0 off && interface WifiMaster0 on",
      "displayResult": "ok"
    },
    {
      "title": "Список подключённых устройств",
      "dialog": null,
      "cmd": "ndms show associations",
      "displayResult": "text"
    },
    {
      "title": "Проверка интернет-соединения",
      "dialog": null,
      "cmd": "ndms ping 8.8.8.8",
      "displayResult": "text"
    },
    {
      "title": "Смена пароля администратора",
      "dialog": {
        "title": "Смена пароля администратора",
        "fields": [
          {
            "label": "Новый пароль",
            "name": "adminPass",
            "type": "string"
          }
        ]
      },
      "cmd": "ndms system password {{adminPass}}",
      "displayResult": "ok"
    },
    {
      "title": "Просмотр системного лога",
      "dialog": null,
      "cmd": "ndms show log system",
      "displayResult": "text"
    },
    {
      "title": "Обновление прошивки",
      "dialog": null,
      "cmd": "ndms firmware update",
      "displayResult": "ok"
    }
  ]
  }